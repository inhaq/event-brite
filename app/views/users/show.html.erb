
<%= name %>
<%= link_to 'Logout',logout_path %>
<% if pending_invitations %>
<p>You have <%= pending_invitations.count %> pending invitation </p>
<% end %>
<% @user.events.all.each do |event| %>
<div class="card mb-2">
<div class="card-body">
<h4><%= event.title %></h4>
<strong><%= event.date %></strong>
</div>
</div>
<% end %>
